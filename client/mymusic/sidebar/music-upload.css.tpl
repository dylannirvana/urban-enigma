.fileupload-preview {
  position: relative;
}

.row.image-uploader {
  position: absolute;
  width: 100%;
  top: 38%;
  left: 38%;
}

.image-uploader > div > span {
  opacity: 0;
}

.fileupload-preview:hover span {
  opacity: 1;
}

.upload-track-container div:first-child {
  padding-right: 0 !important;
}

input#trackPreview {
  border-left: none;
}

.upload-track-container input[disabled], .upload-track-container i {
  background-color: #FAFAFA !important;
  color: #626262 !important;
  opacity: 1 !important;
}